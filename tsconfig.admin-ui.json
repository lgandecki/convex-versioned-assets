{
  "extends": "./admin-example/tsconfig.app.json",
  "compilerOptions": {
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "noEmit": false,
    "allowImportingTsExtensions": false,
    "rootDir": "./admin-example/src/admin-ui",
    "outDir": "./dist/admin-ui",
    "baseUrl": "./admin-example/src",
    "paths": {
      "@/admin-ui/*": ["./admin-ui/*"]
    },
    "types": ["vite/client", "node"]
  },
  "include": ["./admin-example/src/admin-ui/**/*"],
  "exclude": ["**/*.test.ts", "**/*.test.tsx", "./admin-example/convex/**/*"]
}
